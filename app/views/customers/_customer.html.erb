<div class="column">
  <div class="card">
    <% if customer.image.present?%>
      <div class ="card-image">
        <figure class= "image">
          <%= image_tag customer.image %>
        </figure>
      </div>
    <% end %>
    <div class="card-content">
      <p class="title">
        <% if show_link %>
          <%= link_to customer.full_name, customer %>
        <% else %>
          <%= customer.full_name %>
        <% end %>
      </p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        Phone Number: <br><%= customer.phone_number %>
      </p>
      <p class="card-footer-item">
        Email: <br><%= customer.email%>
      </p>
      <p class="card-footer-item">
        Notes: <br><%= customer.notes%>
      </p>
    </footer>
  </div>
</div>